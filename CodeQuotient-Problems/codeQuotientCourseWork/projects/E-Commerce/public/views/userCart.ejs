<html>
    <head>
        <title>E-Commerce</title>
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        <!-- partials -->
        <%- include("partials/header-incart"); %>
        <div id="main-pop-div">
            <main id="main">
                <%products.forEach((product)=>{%>
                    <div class="card">
                        <div class="card-product-image">
                            <img class="product-img" name="<%=product.productDescription%>" src="<%=product.productImage%>">
                        </div>
                        <div>
                        <div class="card-product-name">
                            <h1><%=product.productName%></h1>
                        </div>
                        <h2><%=product.productPrice%></h2>
                        <form method="post" action="removeProductFromCart">
                            <button type="submit" name="productName" value="<%= product.productName %>" id="remove-to-cart-btn">Remove</button>
                        </form>
                        <div id="plus-minus">
                            <form method="post" action="decrementInCart">
                                <button type="submit" name="productName" value="<%= product.productName %>" id="plus-minus-btn">-</button>
                            </form>
                            <p id="cart-count"><%= product.count %></p>
                            <form method="post" action="incrementInCart">
                                <button type="submit" name="productName" value="<%= product.productName %>" id="plus-minus-btn">+</button>
                            </form>

                        </div>
                        <!-- <div class="card-product-details-btn">
                            <button class="btn" value="<%=product.productDescription%>">Details</button>
                        </div> -->
                    </div>
                </div>
                <%})%>
            </main>
        </div>
        <!-- <form method="post" action="/">
            <button id="load-more" type="submit" name="lastCount" value="curCount">Load More</button>
        </form> -->
        <script src="../js/script.js"></script>
    </body>

</html>